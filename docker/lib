#!/bin/bash

function usage {
    local script=$(basename "$0")

    printf "USAGE: %s <dir> [<specific_target_image>]\n" "$script"
    printf "EXAMPLES:\n"
    printf "\t%s cav25\n" "$script"
    printf "\t%s cav25 fedora:latest\n" "$script"

    [[ -n $1 ]] && exit $1
}

[[ -z $1 ]] && usage 0

DIR="$1"
shift

DIRBASE=$(basename "$DIR")
DIRBASE=${DIRBASE%% *}

REPO=xspace
TAG=latest

[[ -n $1 ]] && {
    TARGET=$1
    shift

    REPO+=-${TARGET%:*}
    tag=${TARGET#*:}
    [[ -n $tag ]] && TAG=$tag
}

REPO+=-$DIRBASE

IMAGE=$REPO:$TAG
